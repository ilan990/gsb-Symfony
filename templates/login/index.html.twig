{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<div class="login-design">
    <h1>Connexion</h1>
    <form  action="{{ path('login') }}" method="post">
        <label for="username" style="margin-bottom: 10px">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/></br>

        <label for="password" style="margin-bottom: 10px">Password:</label>
        <input type="password" id="password" name="_password"/></br>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        <button class="bouton-login" type="submit">login</button>
    </form>
</div>
{% endblock %}
