{% extends 'base.html.twig' %}

{% block title %}Visiteur index{% endblock %}

{% block body %}

    <h1>Visiteur index</h1>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>CodePostal</th>
                <th>Ville</th>
                <th>DateEmbauche</th>
                <th>CodeSecteur</th>
                <th>LaboCode</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for visiteur in visiteurs %}
            <tr>
                <td>{{ visiteur[0].id }}</td>
                <td>{{ visiteur[0].nom }}</td>
                <td>{{ visiteur[0].prenom }}</td>
                <td>{{ visiteur[0].adresse }}</td>
                <td>{{ visiteur[0].codePostal }}</td>
                <td>{{ visiteur[0].ville }}</td>
                <td>{{ visiteur[0].dateEmbauche ? visiteur.dateEmbauche|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ visiteur['libelle']}}</td>
                <td>{{ visiteur['nom']}}</td>
                <td>
                    <a href="{{ path('visiteur_show', {'id': visiteur.id}) }}">show</a>
                    <a href="{{ path('visiteur_edit', {'id': visiteur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('visiteur_new') }}">Create new</a>
{% endblock %}
